<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10000000"
    tools:context=".Activity.StaffSchedule">
    <LinearLayout
        android:id="@+id/date_layout"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Date"
            android:textSize="20sp"
            android:fontFamily="@font/josefin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TextInputEditText
            android:id="@+id/staff_schedule_date"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/edittext_bg"
            android:layout_marginTop="@dimen/_5sdp"
            android:clickable="true"
            android:editable="false"
            android:focusable="false"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/subject_layout"
        android:layout_below="@+id/date_layout"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Subject"
            android:textSize="20sp"
            android:fontFamily="@font/josefin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TextInputEditText
            android:id="@+id/staff_schedule_subject"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/edittext_bg"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:fontFamily="@font/josefin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/course_layout"
        android:layout_below="@+id/subject_layout"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Standard / Course / Classes"
            android:textSize="20sp"
            android:fontFamily="@font/josefin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TextInputEditText
            android:id="@+id/staff_schedule_course"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/edittext_bg"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/josefin"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/desc_layout"
        android:layout_below="@+id/course_layout"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Description"
            android:textSize="20sp"
            android:fontFamily="@font/josefin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TextInputEditText
            android:id="@+id/staff_schedule_desc"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/edittext_bg"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:fontFamily="@font/josefin"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/staff_schedule_btn"
            android:text="SCHEDULE"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/josefin"
            android:textSize="20sp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp" />
    </LinearLayout>
</RelativeLayout>