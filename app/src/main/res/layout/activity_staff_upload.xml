<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#10000000"
    android:layout_height="match_parent"
    tools:context=".Activity.StaffUpload">
    <LinearLayout
        android:id="@+id/choose_layout"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/josefin"
            android:text="Choose"
            android:textSize="@dimen/_16sdp"
            android:textAlignment="center"
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <org.angmarch.views.NiceSpinner
            app:arrowTint="@color/colorPrimary"
            android:id="@+id/staff_upload_choose"
            android:layout_width="match_parent"
            android:fontFamily="@font/josefin"
            android:paddingLeft="@dimen/_2sdp"
            android:paddingRight="@dimen/_2sdp"
            android:maxLines="2"
            android:textSize="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_weight="0.8"
            android:layout_height="@dimen/_40sdp" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/choose_layout"
        android:id="@+id/class_layout"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/josefin"
            android:text="Class"
            android:textSize="@dimen/_16sdp"
            android:textAlignment="center"
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <org.angmarch.views.NiceSpinner
            app:arrowTint="@color/colorPrimary"
            android:id="@+id/staff_upload_class"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:fontFamily="@font/josefin"
            android:textSize="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_weight="0.8"
            android:background="@drawable/edittext_bg"
            android:layout_height="@dimen/_40sdp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/subject_layout"
        android:layout_below="@+id/class_layout"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/josefin"
            android:text="Subject"
            android:textSize="@dimen/_16sdp"
            android:textAlignment="center"
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <org.angmarch.views.NiceSpinner
            app:arrowTint="@color/colorPrimary"
            android:id="@+id/staff_upload_subject"
            android:layout_width="match_parent"
            android:fontFamily="@font/josefin"
            android:textSize="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_weight="0.8"
            android:background="@drawable/edittext_bg"
            android:layout_height="@dimen/_40sdp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/chapter_layout"
        android:layout_below="@+id/subject_layout"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/josefin"
            android:text="Chapter"
            android:textSize="@dimen/_16sdp"
            android:textAlignment="center"
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TextInputEditText
            app:arrowTint="@color/colorPrimary"
            android:id="@+id/staff_upload_chapter"
            android:layout_width="match_parent"
            android:fontFamily="@font/josefin"
            android:paddingLeft="@dimen/_2sdp"
            android:paddingRight="@dimen/_2sdp"
            android:maxLines="2"
            android:textSize="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_weight="0.8"
            android:background="@drawable/edittext_bg"
            android:layout_height="@dimen/_40sdp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/file_layout"
        android:layout_below="@+id/chapter_layout"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/josefin"
            android:text="File Name"
            android:textSize="@dimen/_16sdp"
            android:textAlignment="center"
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/staff_upload_file"
            android:fontFamily="@font/josefin"
            android:textSize="@dimen/_16sdp"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_weight="0.8"
            android:background="@drawable/edittext_bg"
            android:layout_height="@dimen/_40sdp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/staff_upload_iv"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_below="@+id/chapter_layout"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_gravity="center"
        android:src="@drawable/ic_attach"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp" />
    <LinearLayout
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
       android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/staff_upload_btn"
            android:textSize="@dimen/_16sdp"
            android:text="Upload"
            android:textColor="#ffffff"
            android:fontFamily="@font/josefin"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>